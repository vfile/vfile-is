{
  "name": "vfile-is",
  "version": "1.0.0",
  "description": "Check if a file passes a test",
  "license": "MIT",
  "keywords": [
    "virtual",
    "file",
    "text",
    "processing",
    "check",
    "is",
    "matches"
  ],
  "repository": "vfile/vfile-is",
  "bugs": "https://github.com/vfile/vfile-is/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.js",
  "files": [
    "convert.js",
    "index.js"
  ],
  "dependencies": {
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "nyc": "^13.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "to-vfile": "^5.0.2",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "guard-for-in": "off",
      "prefer-arrow-callback": "off",
      "object-shorthand": "off",
      "unicorn/no-new-buffer": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
